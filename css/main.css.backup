/* ========================================
   BRIDGE CLUBHOUSE - MAIN STYLESHEET
   ======================================== */

/* ========================================
   CUSTOM FONTS
   ======================================== */
@font-face {
    font-family: 'Optima Nova LT Pro Light';
    font-style: normal;
    font-weight: 100;
    font-display: swap;
    src: url('../fonts/Optima-Nova-LT-Pro-Light.woff2') format('woff2'),
         url('../fonts/Optima-Nova-LT-Pro-Light.woff') format('woff'),
         url('../fonts/Optima-Nova-LT-Pro-Light.ttf') format('truetype');
}

@font-face {
    font-family: 'Sofia Pro';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('../fonts/Sofia-Pro-Regular-Az.woff2') format('woff2'),
         url('../fonts/Sofia-Pro-Regular-Az.woff') format('woff'),
         url('../fonts/Sofia-Pro-Regular-Az.ttf') format('truetype');
}

/* ========================================
   CSS VARIABLES - COLOR PALETTE
   ======================================== */
:root {
    /* Primary Colors - Warm Browns */
    --color-primary-dark: #63431E;
    --color-primary-medium: #423729;
    --color-primary-light: #684828;

    /* Secondary Colors - Beige/Cream */
    --color-secondary-light: #F5EFE7;
    --color-secondary-medium: #E8DDD0;
    --color-secondary-dark: #D4C4B0;

    /* Accent Colors */
    --color-white: #FFFFFF;
    --color-black: #000000;
    --color-text-dark: #2C2416;

    /* Gradient Overlays */
    --gradient-hero: linear-gradient(180deg, rgba(99, 67, 30, 0.8) 0%, rgba(10, 8, 6, 0) 80%);
    --gradient-overlay: linear-gradient(180deg, rgba(66, 55, 41, 0.7) 0%, rgba(242, 41, 91, 0) 100%);
    --gradient-dark: linear-gradient(180deg, rgba(2, 1, 1, 0) 87%, rgba(104, 72, 40, 0.9) 100%);

    /* Typography */
    --font-heading: 'Optima Nova LT Pro Light', serif;
    --font-body: 'Sofia Pro', sans-serif;
    --font-button: 'Roboto', sans-serif;

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;

    /* Transitions */
    --transition-fast: 0.3s ease;
    --transition-medium: 0.5s ease;
    --transition-slow: 0.8s ease;
}

/* ========================================
   RESET & BASE STYLES
   ======================================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: var(--font-body);
    font-weight: 400;
    line-height: 1.6;
    color: var(--color-text-dark);
    background-color: var(--color-white);
    overflow-x: hidden;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition-fast);
}

ul {
    list-style: none;
}

/* ========================================
   TYPOGRAPHY
   ======================================== */
h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: 100;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.2;
    margin-bottom: var(--spacing-sm);
}

h1 {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    letter-spacing: 0.15em;
}

h2 {
    font-size: clamp(2rem, 4vw, 3.5rem);
}

h3 {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
}

h4 {
    font-size: clamp(1.2rem, 2.5vw, 2rem);
}

p {
    font-family: var(--font-body);
    font-size: clamp(0.95rem, 1.5vw, 1.1rem);
    letter-spacing: 0.05em;
    line-height: 1.8;
    margin-bottom: var(--spacing-sm);
}

/* ========================================
   BUTTONS
   ======================================== */
.btn {
    display: inline-block;
    font-family: var(--font-button);
    font-size: 0.95rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 1rem 2.5rem;
    border: none;
    cursor: pointer;
    transition: var(--transition-medium);
    text-align: center;
}

.btn-primary {
    background-color: var(--color-white);
    color: var(--color-black);
    border-radius: 0;
}

.btn-primary:hover {
    background-color: var(--color-black);
    color: var(--color-white);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.btn-secondary {
    background-color: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-white);
}

.btn-secondary:hover {
    background-color: var(--color-white);
    color: var(--color-black);
}

/* ========================================
   NAVIGATION
   ======================================== */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 1.5rem 4rem;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 100%);
    transition: var(--transition-medium);
}

.navbar.scrolled {
    background-color: rgba(99, 67, 30, 0.95);
    backdrop-filter: blur(10px);
    padding: 1rem 4rem;
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
}

.nav-logo img {
    height: 60px;
    transition: var(--transition-medium);
}

.navbar.scrolled .nav-logo img {
    height: 50px;
}

.nav-menu {
    display: flex;
    gap: 3rem;
    align-items: center;
}

.nav-link {
    font-family: var(--font-body);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-white);
    position: relative;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-white);
    transition: var(--transition-fast);
}

.nav-link:hover::after {
    width: 100%;
}

.nav-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 5px;
}

.nav-toggle span {
    width: 25px;
    height: 2px;
    background-color: var(--color-white);
    transition: var(--transition-fast);
}

/* ========================================
   HERO SECTION
   ======================================== */
.hero {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.hero-slideshow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1.5s ease-in-out;
}

.hero-slide.active {
    opacity: 1;
}

.hero-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient-hero);
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: var(--color-white);
    padding: 0 var(--spacing-md);
    animation: fadeInUp 1.2s ease-out;
}

.hero-logo {
    margin-bottom: var(--spacing-md);
    animation: fadeInDown 1s ease-out;
}

.hero-logo img {
    height: 120px;
    margin: 0 auto;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.5));
}

.hero-title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    text-shadow: 0 5px 30px rgba(0, 0, 0, 0.8);
    margin-bottom: var(--spacing-sm);
}

.hero-subtitle {
    font-size: clamp(0.9rem, 1.5vw, 1.2rem);
    letter-spacing: 0.5rem;
    text-transform: uppercase;
    text-shadow: 0 3px 20px rgba(0, 0, 0, 0.8);
    margin-bottom: var(--spacing-lg);
}

.hero-cta {
    margin-top: var(--spacing-md);
}

.hero-contact {
    position: absolute;
    bottom: var(--spacing-md);
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.85rem;
    color: var(--color-white);
    letter-spacing: 0.1em;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.7);
    z-index: 2;
}

/* ========================================
   SECTION STYLES
   ======================================== */
.section {
    padding: var(--spacing-xl) var(--spacing-md);
    position: relative;
}

.section-dark {
    background-color: var(--color-primary-dark);
    color: var(--color-white);
}

.section-light {
    background-color: var(--color-secondary-light);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.section-header {
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.section-title {
    color: var(--color-primary-dark);
    margin-bottom: var(--spacing-sm);
}

.section-dark .section-title {
    color: var(--color-white);
}

.section-subtitle {
    font-size: 1.1rem;
    color: var(--color-primary-medium);
    letter-spacing: 0.2em;
}

.section-dark .section-subtitle {
    color: var(--color-secondary-light);
}

/* ========================================
   SPLIT SECTION (IMAGE + TEXT)
   ======================================== */
.split-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
    align-items: center;
    margin-bottom: var(--spacing-xl);
}

.split-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 4/3;
}

.split-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
}

.split-image:hover img {
    transform: scale(1.05);
}

.split-content {
    padding: var(--spacing-md);
}

.split-section.reverse {
    direction: rtl;
}

.split-section.reverse > * {
    direction: ltr;
}

/* ========================================
   AMENITIES GRID
   ======================================== */
.amenities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
}

.amenity-card {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
    cursor: pointer;
}

.amenity-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
}

.amenity-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(99, 67, 30, 0.9) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    padding: var(--spacing-md);
    opacity: 1;
    transition: var(--transition-medium);
}

.amenity-card:hover .amenity-image {
    transform: scale(1.1);
}

.amenity-card:hover .amenity-overlay {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.9) 100%);
}

.amenity-title {
    font-size: 1.8rem;
    color: var(--color-white);
    text-align: center;
    margin-bottom: var(--spacing-xs);
}

.amenity-description {
    font-size: 0.9rem;
    color: var(--color-white);
    text-align: center;
    opacity: 0.9;
    letter-spacing: 0.1em;
}

/* ========================================
   FOOTER
   ======================================== */
.footer {
    background-color: var(--color-primary-dark);
    color: var(--color-white);
    padding: var(--spacing-lg) var(--spacing-md) var(--spacing-md);
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
}

.footer-section h4 {
    margin-bottom: var(--spacing-sm);
    color: var(--color-secondary-light);
}

.footer-section p,
.footer-section a {
    font-size: 0.95rem;
    line-height: 2;
    opacity: 0.9;
}

.footer-section a:hover {
    opacity: 1;
    color: var(--color-secondary-light);
}

.footer-logo img {
    height: 80px;
    margin-bottom: var(--spacing-sm);
}

.footer-bottom {
    text-align: center;
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.85rem;
    opacity: 0.7;
}

/* ========================================
   MUSIC PLAYER
   ======================================== */
.music-player {
    position: fixed;
    bottom: var(--spacing-md);
    right: var(--spacing-md);
    z-index: 999;
    background-color: rgba(99, 67, 30, 0.9);
    backdrop-filter: blur(10px);
    padding: 1rem;
    border-radius: 50px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: var(--transition-medium);
}

.music-player:hover {
    transform: scale(1.05);
    background-color: rgba(99, 67, 30, 1);
}

.music-icon {
    width: 40px;
    height: 40px;
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
}

/* ========================================
   ANIMATIONS
   ======================================== */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInDown {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity var(--transition-slow), transform var(--transition-slow);
}

.fade-in.visible {
    opacity: 1;
    transform: translateY(0);
}

/* ========================================
   RESPONSIVE DESIGN
   ======================================== */
@media (max-width: 1024px) {
    :root {
        --spacing-xl: 4rem;
        --spacing-lg: 3rem;
    }

    .navbar {
        padding: 1rem 2rem;
    }

    .split-section {
        grid-template-columns: 1fr;
        gap: var(--spacing-md);
    }

    .split-section.reverse {
        direction: ltr;
    }
}

@media (max-width: 768px) {
    .nav-menu {
        position: fixed;
        top: 0;
        right: -100%;
        width: 70%;
        height: 100vh;
        background-color: rgba(99, 67, 30, 0.98);
        flex-direction: column;
        justify-content: center;
        padding: var(--spacing-lg);
        transition: var(--transition-medium);
    }

    .nav-menu.active {
        right: 0;
    }

    .nav-toggle {
        display: flex;
    }

    .hero-logo img {
        height: 80px;
    }

    .hero-contact {
        font-size: 0.75rem;
        bottom: var(--spacing-sm);
    }

    .amenities-grid {
        grid-template-columns: 1fr;
    }

    .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .music-player {
        bottom: var(--spacing-sm);
        right: var(--spacing-sm);
        padding: 0.75rem;
    }
}

@media (max-width: 480px) {
    :root {
        --spacing-xl: 3rem;
        --spacing-lg: 2rem;
        --spacing-md: 1rem;
    }

    .navbar {
        padding: 1rem;
    }

    .section {
        padding: var(--spacing-lg) var(--spacing-sm);
    }
}

/* ========================================
   MENU & FEATURE STYLES
   ======================================== */

.menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-md);
}

.menu-category {
    padding: var(--spacing-md);
    background-color: var(--color-white);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
}

.menu-category h3 {
    color: var(--color-primary-dark);
    margin-bottom: var(--spacing-md);
    border-bottom: 2px solid var(--color-secondary-medium);
    padding-bottom: var(--spacing-xs);
}

.menu-item {
    margin-bottom: var(--spacing-md);
}

.menu-item h4 {
    color: var(--color-primary-medium);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
}

.menu-item p {
    font-size: 0.9rem;
    color: #666;
    margin: 0;
}

.feature-list {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-md);
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.feature-item i {
    color: var(--color-primary-dark);
    font-size: 1.2rem;
}

.feature-item span {
    font-size: 0.9rem;
    color: var(--color-text-dark);
}

.text-center {
    text-align: center;
}

.hero-page {
    height: 60vh;
}

@media (max-width: 768px) {
    .menu-grid {
        grid-template-columns: 1fr;
    }

    .feature-list {
        grid-template-columns: 1fr;
    }
}
